.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f4f4f4; /* 整体背景色 */
  min-height: 100vh;
}

.header-section {
  width: 100%;
  background: linear-gradient(to bottom, #60D9A7, #82F7C2); /* 示例渐变绿 */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  box-sizing: border-box;
  position: relative; /* 为了机器人图片定位 */
  color: white;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

.logo-atom {
  width: 100rpx;
  height: 100rpx;
  opacity: 0.5; /* 根据设计调整 */
  position: absolute;
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
}

.title-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx; /* 为原子logo留出空间 */
}

.main-title {
  font-size: 52rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.leaf-icon {
  width: 40rpx;
  height: 40rpx;
}

.subtitle {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.subtitle-detail {
  font-size: 24rpx;
  margin-top: 5rpx;
  opacity: 0.9;
}

.robot-image {
  width: 150rpx;
  height: 180rpx;
  position: absolute;
  right: 30rpx;
  bottom: -60rpx; /* 部分悬浮效果 */
  z-index: 10;
}

.upload-section {
  background-color: #ffffff;
  width: calc(100% - 60rpx);
  margin-top: 80rpx; /* 为悬浮的机器人图片留出空间 */
  border-radius: 20rpx;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.scan-icon-container {
  width: 200rpx;
  height: 200rpx;
  border: 6rpx dashed #60D9A7; /* 虚线框 */
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.scan-cube-icon {
  width: 120rpx;
  height: 120rpx;
  color: #60D9A7; /* 如果是字体图标或SVG，可以设置颜色 */
}

.upload-button {
  width: 80%;
  padding: 25rpx 0;
  font-size: 32rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right, #5DECA9, #36CF8A);
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.upload-link {
  font-size: 28rpx;
  color: #555;
}

.footer-guide {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  background-color: #f4f4f4; /* 与页面背景一致或稍作区分 */
  font-size: 24rpx;
  color: #888;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); /* 适配iPhone X等底部安全区域 */
}

.guide-text {
  padding: 10rpx;
}

