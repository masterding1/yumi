.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #00d6a9; /* 绿色背景 */
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
}

/* 顶部区域样式 */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 60rpx;
  position: relative;
}

.main-title {
  font-size: 60rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.subtitle {
  font-size: 32rpx;
  color: white;
  margin-bottom: 10rpx;
}

.subtitle-detail {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.robot-image {
  position: absolute;
  right: 0;
  bottom: -40rpx;
  width: 200rpx;
  height: 200rpx;
}

/* 上传区域样式 */
.upload-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
  background-color: white;
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx;
  flex: 1;
}

.scan-icon-container {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.scan-cube-icon {
  width: 160rpx;
  height: 160rpx;
}

.upload-button {
  width: 90%;
  height: 90rpx;
  background-color: #00d6a9;
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.upload-link {
  font-size: 28rpx;
  color: #666;
  text-decoration: underline;
}

/* 底部指南样式 */
.footer-guide {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 30rpx auto;
}

.guide-text {
  font-size: 26rpx;
  color: #666;
}

/* 悬浮图标样式 */
.floating-icon-container {
  position: absolute;
  right: 40rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.floating-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.floating-text {
  font-size: 24rpx;
  color: #333;
}