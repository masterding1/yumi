<view class="container">
  <!-- 顶部背景和标题区域 -->
  <view class="header-section">
    <image class="logo-atom" src="/images/atom-logo.png" mode="aspectFit"></image> <!-- 假设的原子logo路径 -->
    <view class="title-container">
      <text class="main-title">玉见未来</text>
      <image class="leaf-icon" src="/images/leaf.png" mode="widthFix"></image> <!-- 假设的叶子图标路径 -->
    </view>
    <text class="subtitle">玉米长势好不好，玉见未来都知道。</text>
    <text class="subtitle-detail">快速识别玉米病害、虫害及缺素等。</text>
    <image class="robot-image" src="/images/robot.png" mode="aspectFit"></image> <!-- 假设的机器人图片路径 -->
  </view>

  <!-- 上传操作区域 -->
  <view class="upload-section">
    <view class="scan-icon-container">
      <image class="scan-cube-icon" src="/images/scan-cube.png" mode="aspectFit"></image> <!-- 假设的扫描方块图标 -->
    </view>
    <button class="upload-button camera-button" bindtap="chooseImage" data-sourcetype="camera">拍照上传</button>
    <text class="upload-link album-link" bindtap="chooseImage" data-sourcetype="album">从相册中上传</text>
  </view>

  <!-- 底部指南 -->
  <view class="footer-guide">
    <text class="guide-text left-guide">拍照指南</text>
    <text class="guide-text right-guide">更多指南 ></text>
  </view>

  <!-- 蓝心小V悬浮图标 (如果需要) -->
  <!-- <image class="floating-icon" src="/images/blue-v.png" mode="aspectFit"></image> -->
</view>