<view class="container">
  <view class="image-preview-section">
    <image src="{{imgSrc}}" class="result-image-preview" mode="aspectFill"></image>
    <view class="image-overlay-info">
      <text class="date-time-info">{{displayTime}}</text>
    </view>
    <view class="back-button" bindtap="goBack">
      <image src="/images/back-arrow.png" mode="aspectFit"></image> <!-- 假设的返回箭头图标路径 -->
    </view>
  </view>

  <view class="result-content-section">
    <view class="result-header">
      <text class="result-title">识别结果 <text class="reference-text">(仅供参考)</text> 共1个</text>
      <text class="feedback-link">识别错误反馈</text>
    </view>

    <view class="result-item" wx:if="{{disease}}">
      <image src="{{imgSrc}}" class="result-thumbnail" mode="aspectFill"></image>
      <view class="result-details">
        <text class="disease-name">{{disease}}</text>
        <text class="confidence-text">相似度 <text class="confidence-value">{{confidence}}%</text></text>
      </view>
      <image class="arrow-icon" src="/images/right-arrow.png" mode="aspectFit"></image> <!-- 假设的右箭头图标路径 -->
    </view>
    <view wx:else class="no-result">
      <text>未能获取识别结果</text>
    </view>

    <!-- 新的详细信息展示区域 -->
    <view class="detailed-info-section">
      <view class="info-block" wx:if="{{symptoms}}">
        <text class="info-title">症状：</text>
        <text class="info-text">{{symptoms}}</text>
      </view>
      <view class="info-block" wx:if="{{cause}}">
        <text class="info-title">病因：</text>
        <text class="info-text">{{cause}}</text>
      </view>
      <view class="info-block" wx:if="{{harm}}">
        <text class="info-title">危害：</text>
        <text class="info-text">{{harm}}</text>
      </view>
      <view class="info-block" wx:if="{{prevention_advice}}">
        <text class="info-title">防治建议：</text>
        <text class="info-text">{{prevention_advice}}</text>
      </view>
      <view class="info-block location-time-info">
        <text class="info-text">当前地点：{{location_info}}，时间：{{time_info}}</text>
      </view>
    </view>

  </view>
  
  <button class="home-button" bindtap="goHome">返回首页</button>
</view>