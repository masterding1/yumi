.container {
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.image-preview-section {
  width: 100%;
  height: 400rpx; /* 预览图高度 */
  position: relative;
}

.result-image-preview {
  width: 100%;
  height: 100%;
}

.image-overlay-info {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  background-color: rgba(0,0,0,0.4);
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.back-button {
  position: absolute;
  top: calc(20rpx + env(safe-area-inset-top)); /* 适配状态栏 */
  left: 20rpx;
  background-color: rgba(0,0,0,0.3);
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-button image {
  width: 30rpx;
  height: 30rpx;
}

.result-content-section {
  padding: 30rpx;
  background-color: #ffffff;
  flex-grow: 1;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 30rpx;
  color: #333;
}

.reference-text {
  font-size: 24rpx;
  color: #999;
}

.feedback-link {
  font-size: 26rpx;
  color: #07c160; /* 微信绿 */
}

.result-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-thumbnail {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  object-fit: cover;
}

.result-details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.disease-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.confidence-text {
  font-size: 26rpx;
  color: #666;
}

.confidence-value {
  font-weight: bold;
  color: #FF6B6B; /* 显眼的颜色表示相似度 */
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

.no-result {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

.detailed-info-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9; /* 与原 suggestion-section 类似 */
  border-radius: 10rpx;
}

.info-block {
  margin-bottom: 20rpx;
}

.info-block:last-child {
  margin-bottom: 0;
}

.info-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.info-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
  white-space: pre-wrap; /* 保留文本中的换行符 */
}

.location-time-info .info-text { /* 特定为地点时间信息调整样式，如果需要 */
  font-size: 24rpx;
  color: #777;
  margin-top: 15rpx;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.suggestion-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
  white-space: pre-wrap; /* 保留换行符 */
}

.home-button {
  margin: 40rpx 30rpx;
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}